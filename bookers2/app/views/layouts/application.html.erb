<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav class="nav navbar-nav navbar-left"><span>Bookers</span></nav>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">

              <% if user_signed_in? %>
                <li class="">
                    <%= link_to user_path(current_user.id), class: 'glyphicon glyphicon-home' do %>
                    <span>Home</span>
                    <% end %>
                </li>
                <li class="">
                    <%= link_to users_path, class: 'glyphicon glyphicon-user' do %>
                    <span>Users</span>
                    <% end %>
                </li>
                <li class="">
                    <%= link_to books_path, class: 'glyphicon glyphicon-book' do %>
                    <span>Books</span>
                    <% end %>
                </li>
                <li class="">
                    <%= link_to destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' do %>
                    <span>logout</span>
                    <% end %>
                </li>

              <% else %>

                <li class="menubar">
                    <%= link_to root_path, class: 'glyphicon glyphicon-home' do %>
                    <span>Home</span>
                    <% end %>
                </li>
                <li class="menubar">
                    <%= link_to home_about_path, class: 'glyphicon glyphicon-link' do %>
                    <span>About</span>
                    <% end %>
                </li>
                <li class="menubar">
                  <%= link_to new_user_registration_path, class: 'glyphicon glyphicon-edit' do %>
                  <span>sign up</span>
                  <% end %>
                </li>
                <li class="menubar">
                  <%= link_to new_user_session_path, class: 'glyphicon glyphicon-log-in' do %>
                  <span>login</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
    </header>
    <%= yield %>

    <footer>
      <div class="container">
  	    <div class="row">
    	    <div class="col-xs-3 col-xs-offset-9">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>

  </body>
</html>
